{
  "name": "@tssuite/project-root",
  "version": "0.0.17",
  "description": "Allow to return the root of node.js projects",
  "homepage": "https://github.com/tssuite/project-root",
  "bugs": "https://github.com/tssuite/project-root/issues",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=22.14.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tssuite/project-root.git"
  },
  "main": "dist/project-root.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "build": "pnpx vite build && tsc && node dna/scripts/copy-readme-to-dist.js && node dna/scripts/copy-example-to-dist.js",
    "test": "pnpx vitest run --coverage && pnpm run lint",
    "prebuild": "npm run test",
    "prepublishOnly": "npm run build",
    "lint": "pnpx eslint",
    "updateGoldens": "cross-env UPDATE_GOLDENS=true pnpm test"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.0.0",
    "eslint": "^9.35.0",
    "eslint-plugin-jsdoc": "^58.1.1",
    "eslint-plugin-tsdoc": "^0.4.0",
    "globals": "^16.4.0",
    "jsdoc": "^4.0.4",
    "read-pkg": "^9.0.1",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.5",
    "vite-node": "^3.2.4",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-dom": "^0.1.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "packageManager": "pnpm@10.11.0"
